{
  "name": "clientes-puntos",
  "version": "0.0.1",
  "description": "Sistema gestor de clientes y puntos de fidelizaci√≥n.",
  "author": "NUEVA VILLA S.R.L.",
  "private": true,
  "license": "ISC",
  "scripts": {
    "build": "nest build --config tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "cross-env NODE_ENV=development TZ=America/Argentina/Buenos_Aires nest start",
    "start:docker": "TZ=America/Argentina/Buenos_Aires node -r tsconfig-paths/register dist/main.js",
    "start:dev": "cross-env NODE_ENV=development TZ=America/Argentina/Buenos_Aires node dist/main.js",
    "start:local": "cross-env NODE_ENV=development TZ=America/Argentina/Buenos_Aires nest start --watch",
    "start:prod": "cross-env NODE_ENV=production TZ=America/Argentina/Buenos_Aires node dist/main.js",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@nestjs/bullmq": "^11.0.3",
    "@nestjs/common": "^10.3.11",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.3.11",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.3.11",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^7.2.10",
    "@nestjs/typeorm": "^10.0.0",
    "bullmq": "^5.56.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.0.0",
    "fast-xml-parser": "^5.2.5",
    "ioredis": "^5.7.0",
    "joi": "^17.13.3",
    "jose": "^6.0.12",
    "nest-keycloak-connect": "^1.10.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.25",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^10.2.3",
    "@nestjs/schematics": "^10.2.2",
    "@nestjs/testing": "^10.3.11",
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "sqlite3": "^5.1.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "uuid": "^11.1.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@cliente/(.*)$": "<rootDir>/context/Cliente/$1",
      "^@regla/(.*)$": "<rootDir>/context/Regla/$1",
      "^@puntos/(.*)$": "<rootDir>/context/Puntos/$1",
      "^@infrastructure/(.*)$": "<rootDir>/infrastructure/$1",
      "^@shared/(.*)$": "<rootDir>/shared/$1",
      "^src/(.*)$": "<rootDir>/$1"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
